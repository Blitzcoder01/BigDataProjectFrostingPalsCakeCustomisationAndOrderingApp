<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv_copy"
        android:layout_width="283dp"
        android:layout_height="242dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"
        android:background="#FDB8D0" />

    <TextView
        android:id="@+id/cakename_copy"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/iv_copy"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baloo"
        android:text="Cake Name:"
        android:textColor="#100F0F"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/flavour_copy"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/cakename_copy"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="Flavour:"
        android:textColor="#100F0F"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/cost_copy"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/flavour_copy"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="cost:"
        android:textColor="#100F0F"
        android:textSize="18dp"

        />

    <TextView
        android:id="@+id/weight_copy"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/flavour_copy"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="weight:"
        android:textColor="#100F0F"
        android:textSize="18dp"

        />

    <TextView
        android:id="@+id/type_copy"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/weight_copy"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="type:"
        android:textColor="#100F0F"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/detail_copy"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/type_copy"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="Details:"
        android:textColor="#100F0F"
        android:textSize="18dp" />

    <Button
        android:id="@+id/finalize_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/aladin"
        android:text="Place Order"

        android:textColor="#100F0F" />


</RelativeLayout>
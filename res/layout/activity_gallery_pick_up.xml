<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GalleryPickUp">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="283dp"
        android:layout_height="242dp"
        android:layout_centerHorizontal="true"
        android:background="#FDB8D0" />

    <EditText
        android:id="@+id/title"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:layout_below="@+id/cakename"
        android:layout_centerHorizontal="true"
        android:hint="Flavour:"
        />
    <EditText
        android:id="@+id/weight"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:hint="Weight:"

        />
    <EditText
        android:id="@+id/type"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:layout_below="@+id/weight"
        android:layout_centerHorizontal="true"
        android:hint="Egg: yes/no"

        />
    <EditText
        android:id="@+id/cost"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/type"
        android:hint="cost:"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/aladin"
        android:onClick="pick"
        android:text="select picture" />

    <Button
        android:id="@+id/buttonupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/round_button"

        android:fontFamily="@font/aladin"
        android:text="upload" />

    <EditText
        android:ems="10"
        android:id="@+id/detail"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:layout_below="@+id/cost"
        android:hint="Detail in short:"
        android:layout_centerHorizontal="true"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/cakename"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="@font/baloo"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/iv"
        android:hint="Name Of Cake:" />


</RelativeLayout>